---
import { Image } from "astro:assets";
import { slugify, formatDate } from "../js/utils";
const { title, date, category, author, image } = Astro.props;
---

<header>
  <div class="container">
    <small>
      <a href={`/category/${slugify(category)}`} class="badge"
        >{slugify(category)}</a
      >
    </small>
    <h1 class="h2">{title}</h1>
    <p>
      by <a href={`/author/${slugify(author)}`}>{slugify(author)}</a>
      {formatDate(date)}
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width="1200"
    height="600"
    format="avif"
    class="hero-image"
  />
</header>
